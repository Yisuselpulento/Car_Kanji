---
import {ButtonOpenModal} from '../components/ButtonOpenModal.jsx'
import StarIcon from '../icons/StarIcon.astro'
const { car } = Astro.props
---

<div class="w-[400px] md:w-[350px] rounded-lg shadow-xl">
    <div>
        <img 
        class="h-[200px] w-[400px] md:w-[350px] object-cover rounded-t-lg"
        src={`/Cars/${car.img}`} />
    </div>
    <div class="p-7">
        <div class="flex justify-between mb-4">
            <div class="flex flex-col gap-4">
                <p class="text-2xl font-extrabold text-gray-800 dark:text-white">{car.model}</p>
                <p class="text-lg font-extrabold text-gray-600 dark:text-gray-400">Estrellas</p>
                <p class="text-lg font-extrabold text-gray-600 dark:text-gray-400">{car.model}</p>
                <p class="text-lg font-extrabold text-gray-600 dark:text-gray-400">Manual</p>
            </div>
            <div class="flex flex-col gap-4">
                <p class="text-2xl font-extrabold text-gray-800 dark:text-white">{car.price}</p>
                <div class="flex gap-1 p-2">
                    {Array.from({ length: car.stars }, (_, index) => (
                    <StarIcon key={index} class="size-3 text-yellow-500" />
                  ))}
                </div>
                <p class="text-lg font-extrabold text-gray-600 dark:text-gray-400">{car.stars}/5</p>
                <p class="text-lg font-extrabold text-gray-600 dark:text-gray-400">{car.carge}</p>

            </div>
        
        </div>
        <ButtonOpenModal />
    </div>
</div>